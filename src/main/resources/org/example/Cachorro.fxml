<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="800" style="-fx-background-color: #FFECB3;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.CachorroController">

    <!-- Título -->
    <Label layoutX="20" layoutY="20" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Cadastro de Cachorros" />

    <!-- Espaço para imagem -->
    <ImageView fx:id="imageViewCachorro" fitHeight="200" fitWidth="200" layoutX="20" layoutY="60" style="-fx-border-color: gray; -fx-border-width: 1;">
        <image>
            <Image url="@../../../IMAGENS/dog.jpg" />
        </image>
    </ImageView>

    <!-- Lista de Cachorros -->
    <ListView fx:id="listViewCachorros" layoutX="250" layoutY="60" prefHeight="400" prefWidth="520" />

    <!-- Botões de CRUD -->
    <Button fx:id="btnAdicionar" layoutX="250" layoutY="480" onAction="#handleAdicionar" prefHeight="40" prefWidth="120" text="Adicionar" />
    <Button fx:id="btnEditar" layoutX="390" layoutY="480" onAction="#handleEditar" prefHeight="40" prefWidth="120" text="Editar" />
    <Button fx:id="btnApagar" layoutX="530" layoutY="480" onAction="#handleApagar" prefHeight="40" prefWidth="120" text="Apagar" />
    <Button fx:id="btnAtualizar" layoutX="670" layoutY="480" onAction="#handleAtualizar" prefHeight="40" prefWidth="120" text="Atualizar" />

    <!-- Botões para métodos do Cachorro -->
    <Button fx:id="btnLatir" layoutX="250" layoutY="540" onAction="#handleLatir" prefHeight="40" prefWidth="120" text="Latir" />
    <Button fx:id="btnFalarIdade" layoutX="390" layoutY="540" onAction="#handleFalarIdade" prefHeight="40" prefWidth="120" text="Falar Idade" />
    <Button fx:id="btnFalarRaca" layoutX="530" layoutY="540" onAction="#handleFalarRaca" prefHeight="40" prefWidth="120" text="Falar Raça" />

</AnchorPane>
