<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="800" style="-fx-background-color: #C8E6C9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.CarroController">

    <!-- Título -->
    <Label layoutX="20" layoutY="20" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Cadastro de Carros" />

    <!-- Espaço para imagem -->
    <ImageView fx:id="imageViewCarro" fitHeight="200" fitWidth="200" layoutX="20" layoutY="60" style="-fx-border-color: gray; -fx-border-width: 1;">
        <image>
            <Image url="@../../../IMAGENS/carro.jpg" />
        </image>
    </ImageView>

    <!-- Lista de Carros -->
    <ListView fx:id="listViewCarros" layoutX="250" layoutY="60" prefHeight="400" prefWidth="520" />

    <!-- Botões de CRUD -->
    <Button fx:id="btnAdicionar" layoutX="250" layoutY="480" onAction="#handleAdicionar" prefHeight="40" prefWidth="120" text="Adicionar" />
    <Button fx:id="btnEditar" layoutX="390" layoutY="480" onAction="#handleEditar" prefHeight="40" prefWidth="120" text="Editar" />
    <Button fx:id="btnApagar" layoutX="530" layoutY="480" onAction="#handleApagar" prefHeight="40" prefWidth="120" text="Apagar" />
    <Button fx:id="btnAtualizar" layoutX="670" layoutY="480" onAction="#handleAtualizar" prefHeight="40" prefWidth="120" text="Atualizar" />

    <!-- Botões para métodos do Carro -->
    <Button fx:id="btnLigar" layoutX="250" layoutY="540" onAction="#handleLigar" prefHeight="40" prefWidth="120" text="Ligar" />
    <Button fx:id="btnDesligar" layoutX="390" layoutY="540" onAction="#handleDesligar" prefHeight="40" prefWidth="120" text="Desligar" />
    <Button fx:id="btnAcelerar" layoutX="530" layoutY="540" onAction="#handleAcelerar" prefHeight="40" prefWidth="120" text="Acelerar" />

</AnchorPane>
